# Set behaviour for all files, so always leave global core.autocrlf to "input" (default)
* text=auto

# Explicitly declare text files we want to always be normalized and converted to native line endings on checkout.
*.txt text
*.exp text
*.r   text
 
# Declare common diff patterns for specific file types
*.cs     text diff=csharp
*.htm    text diff=html
*.html   text diff=html
*.py     text diff=python
*.py3    text diff=python
*.java   text diff=java
*.m      text diff=objc
*.mm     text diff=objc
*.pas    text diff=pascal
*.c      text diff=cpp
*.h      text diff=cpp
*.cpp    text diff=cpp
*.hpp    text diff=cpp

# Declare files that will always have CRLF line endings on checkout.
*.xaml          text eol=crlf
*.ps1           text eol=crlf
*.sln           text eol=crlf
*.csproj        text eol=crlf
*.vbproj        text eol=crlf
*.vcproj        text eol=crlf
*.vcxproj       text eol=crlf
*.vsdoc         text eol=crlf
*.testsettings  text eol=crlf
*.testrunconfig text eol=crlf
*.DotSettings   text eol=crlf
*.netlicproj    text eol=crlf
*.aip           text eol=crlf
 
# Declare files that will always have LF line endings on checkout
*.sh       text eol=lf
*.xcconfig text eol=lf

# Prevent EOL conversions (but treat as text)
*.xmp    -text
*.nuspec -text
*.nunit  -text
*.vcxproj.filters    -text
repositories.config  -text
packages.config      -text


# Denote all files that should be treated as binary and should not be modified.
*.zip           binary
*.ai            binary
*.pdf           binary
*.jpg           binary
*.png           binary
*.bmp           binary
*.psd           binary
*.knob          binary
*.nupkg         binary
*.pbxproj       binary
*.plist         binary
*.pbxuser       binary
*.mode1v3       binary
*.perspectivev3 binary
